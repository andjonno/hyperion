fn line(x) {
    var y = 2*x*x + 1;
    return y;
}
fn exec(f, arg) {
    return f(arg);
}
print exec(line, 1);

// Function currying, simulating a generator.
fn makeCounter() {
	var count = 0;
	fn counter() {
		count = count + 1;
		return count;
	}
	return counter;
}

var counter = makeCounter();
print counter(); // 1
print counter(); // 2
print counter(); // 3